<h1>New post</h1>

<%= form_for(@post) do |f|%>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %><br>
    </p>
    <p>
        <%= f.label :content %>
        <%= f.text_field :content %><br>
    </p>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
   

    <%= f.fields_for :tags, @post.tags.build do |ff| %>
        <%= ff.label :tag_name%>
        <%= ff.text_field :tag_name %>
        <% end %>
    <%= f.submit %>
<% end %>